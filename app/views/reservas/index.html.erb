<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table class = "tabela-reservas">
  <thead>
    <tr>
      <th>Criador</th>
      <th>Modalidade</th>
      <th>Naipe</th>
      <th>Dia</th>
      <th>Inicio</th>
      <th>Termino</th>
      <th>OdP</th>
      <th>PH</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.criador %></td>
        <td><%= reserva.modalidade %></td>
        <td><%= reserva.naipe %></td>
        <td><%= reserva.dia %></td>
        <td><%= reserva.inicio.time.strftime("%k:%M") %></td>
        <td><%= reserva.termino.time.strftime("%k:%M") %></td>
        <td><%= reserva.odp %></td>
        <td><%= reserva.ph %></td>
        <td><%= link_to 'Ver', reserva %></td>
        <td><%= link_to 'Editar', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Deletar', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= current_user.role%>
<% if current_user.role == 'LAAUSP' %>
  <%= link_to 'Resetar Pedidos','/resetReservas', data: { confirm: 'Tem certeza que deseja resetar os pedidos/reservas?' } %>
<% end %>

<%= link_to 'Nova Reserva', new_reserva_path %>
<p> </p>
<%= link_to 'Voltar', aaa_index_path %>
