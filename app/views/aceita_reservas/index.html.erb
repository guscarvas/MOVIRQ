      <th>Criador</th>
      <th>Modalidade</th>
      <th>Naipe</th>
      <th>Dia</th>
      <th>Inicio</th>
      <th>Termino</th>
      <th>OdP</th>
      <th>PH</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="pesquisa">
    <%= render 'reserva', reservas: @reservas %>
  </tbody>
</table>

