  <%= form.select :dia, options_for_select([["Segunda",1], ["TerÃ§a",2], ["Quarta",3], ["Quinta",4],[ "Sexta",5]]), {:include_blank => "Selecione um dia da semana"}, {class: "form-control"} %>
