<% if @current_user.role == "atletica" %>

<%= form_with(model: atletica, local: true) do |form| %>
  <% if atletica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(atletica.errors.count, "error") %> prohibited this atletica from being saved:</h2>

      <ul>
        <% atletica.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :name, :class => 'caixa-texto'  %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email,  :class => 'caixa-texto'  %>
  </div>

  <div class="field">
    <%= form.label :senha %>
    <%= form.text_field :password,  :class => 'caixa-texto'  %>
  </div>

  <div class="actions">
    <%= form.submit  "Cadastrar atlética",  :class => 'botao'  %>
  </div>
<% end %>

<% else %>
<p class = 'texto-atletica'> Você não tem permissão para acessar esta página</p>
<% end %>